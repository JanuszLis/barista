---
layout: layouts/base.njk
---

{% extends "layouts/layout-variants/with-sidebar.njk" %}

{% block sidebar %}
  {% for section in componentSidebar %}
  <div class="ds-sidenav-section">
    <header class="ds-sidenav-section-title ds-sidenav-menu-item">{{section.title | title}}</header>
    <ul>
    {% for item in section.items %}
      <li class="ds-sidenav-menu-item">
        <a
          class="ds-sidenav-item {{"ds-sidenav-item-active" if item.link in page.url}}"
          href="{{item.link}}"
        >
          {{ item.title }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
  {% endfor %}
{% endblock %}

{% block main %}
  {{ post.content | markdownify | safe }}

  {% if post.readmeContent %}
  
  <h2>API Docs<h2>
  {{ post.readmeContent | markdownify |safe }}
  {% endif %}
{% endblock %}
